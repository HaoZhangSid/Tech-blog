<div class="min-h-screen bg-gray-900 text-gray-100">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Dashboard header -->
    <header class="mb-12">
      <h1 class="text-4xl font-bold text-white mb-2 border-b border-cyan-500 pb-4 inline-block">Admin Dashboard</h1>
      <p class="text-gray-400 mt-2 font-light">Manage your blog content securely</p>
    </header>

    <!-- Success/error messages -->
    {{#if success_msg}}
      <div class="bg-green-900/50 border border-green-800 text-green-300 px-4 py-3 rounded mb-6" role="alert">
        <p>{{success_msg}}</p>
      </div>
    {{/if}}
    
    {{#if error_msg}}
      <div class="bg-red-900/50 border border-red-800 text-red-300 px-4 py-3 rounded mb-6" role="alert">
        <p>{{error_msg}}</p>
      </div>
    {{/if}}

    <!-- Quick stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
      <div class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-cyan-500 transition-colors">
        <div class="flex justify-between items-center">
          <h2 class="text-xl font-semibold text-white">Posts</h2>
          <span class="text-3xl font-bold text-cyan-400">0</span>
        </div>
        <p class="text-gray-400 mt-2 text-sm">Published blog posts</p>
      </div>
      
      <div class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-cyan-500 transition-colors">
        <div class="flex justify-between items-center">
          <h2 class="text-xl font-semibold text-white">Comments</h2>
          <span class="text-3xl font-bold text-cyan-400">0</span>
        </div>
        <p class="text-gray-400 mt-2 text-sm">Pending approval</p>
      </div>
      
      <div class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-cyan-500 transition-colors">
        <div class="flex justify-between items-center">
          <h2 class="text-xl font-semibold text-white">Views</h2>
          <span class="text-3xl font-bold text-cyan-400">0</span>
        </div>
        <p class="text-gray-400 mt-2 text-sm">Total page views</p>
      </div>
    </div>

    <!-- Quick actions -->
    <div class="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden mb-10">
      <div class="px-6 py-4 border-b border-gray-700">
        <h2 class="text-xl font-semibold text-white">Quick Actions</h2>
      </div>
      <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-4">
        <a href="/admin/posts/new" class="bg-cyan-600 hover:bg-cyan-700 transition-colors text-white font-medium py-3 px-4 rounded-md flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New Post
        </a>
        
        <a href="/admin/profile" class="bg-gray-700 hover:bg-gray-600 transition-colors text-white font-medium py-3 px-4 rounded-md flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          Edit Profile
        </a>
      </div>
    </div>

    <!-- Logout section -->
    <div class="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden">
      <div class="px-6 py-4">
        <h2 class="text-xl font-semibold text-white">Account Security</h2>
      </div>
      <div class="p-6">
        <form action="/logout" method="POST">
          <button type="submit" class="bg-red-600 hover:bg-red-700 transition-colors text-white font-medium py-3 px-4 rounded-md flex items-center justify-center w-full md:w-auto">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Secure Logout
          </button>
        </form>
      </div>
    </div>
  </div>
</div> 