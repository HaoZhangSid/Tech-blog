{{!-- Generic message display page for feedback --}}
<div class="max-w-4xl mx-auto p-4">
  <div class="bg-gray-900 p-6 rounded-lg shadow-lg mb-6">
    <h1 class="text-2xl font-bold text-cyan-400 mb-2">{{headline}}</h1>
    
    <div class="bg-{{alertType}}-900/50 border border-{{alertType}}-800 text-{{alertType}}-300 px-4 py-3 rounded mb-6">
      <p class="text-lg">{{message}}</p>
      
      {{#if details}}
        <div class="mt-3 pt-3 border-t border-{{alertType}}-800/50 text-sm">
          <p>{{details}}</p>
        </div>
      {{/if}}
    </div>
    
    <div class="flex justify-between items-center mt-6">
      <a href="{{backUrl}}" class="bg-gray-800 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded transition duration-300">
        {{backText}}
      </a>
      
      {{#if secondaryLink}}
        <a href="{{secondaryLink}}" class="text-cyan-400 hover:text-cyan-300 underline">
          {{secondaryText}}
        </a>
      {{/if}}
    </div>
  </div>
</div> 