<!-- Font loading control script - Must be in head -->
<script>
  // Remove no-js class quickly
  document.documentElement.classList.remove('no-js');

  // Check if fonts are already cached and available
  if (sessionStorage.fontsLoaded) {
    document.documentElement.classList.add('fonts-loaded');
  } else {
    // Handle font loading completion
    if ("fonts" in document) {
      Promise.all([
        document.fonts.load('1em Inter'),
        document.fonts.load('1em JetBrains Mono')
      ]).then(function () {
        document.documentElement.classList.add('fonts-loaded');
        // Cache font loading status
        sessionStorage.fontsLoaded = true;
      });
    } else {
      // Fallback: Assume fonts loaded after a timeout in older browsers
      setTimeout(function() {
        document.documentElement.classList.add('fonts-loaded');
      }, 300);
    }
  }
</script> 